<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/scan_me_logo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dip"
            android:src="@drawable/scan_me_logo" />
		<LinearLayout android:id="@+id/camera_row" android:layout_marginBottom="5dip" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
			<ImageView android:src="@drawable/camera_app" android:layout_marginRight="20dip" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
			<TextView android:text="扫	描" android:textSize="24sp" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
		</LinearLayout>
	

       <LinearLayout android:id="@+id/file_row" android:layout_marginBottom="5dip" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
			<ImageView android:src="@drawable/gallery_flower" android:layout_marginRight="20dip" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
			<TextView android:text="下	载" android:textSize="24sp" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
		</LinearLayout>

       <LinearLayout android:id="@+id/setting_row" android:layout_marginBottom="5dip" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
			<ImageView android:src="@drawable/settings_app" android:layout_marginRight="20dip" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
			<TextView android:text="收	藏" android:textSize="24sp" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
		</LinearLayout>
    </LinearLayout>

</RelativeLayout>